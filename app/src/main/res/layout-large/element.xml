<?xml version="1.0" encoding="utf-8"?>
<com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="3.2in"
        tools:context=".MainActivity"
        android:background="#ffffff"
        android:weightSum="100"
        app:corner_radius="6dp"
        android:id="@+id/element"
        android:layout_margin="5dp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_weight="60"
            android:weightSum="100"
            android:layout_height="match_parent" >
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                tools:srcCompat="@tools:sample/backgrounds/scenic"
                android:id="@+id/photo" />

    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="40"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            android:orientation="vertical" android:id="@+id/information">

        <TextView
                android:layout_margin="2dp"
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/soustitre"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/black"/>
        <LinearLayout
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50">
                <TextView
                        android:layout_margin="2dp"
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/depot"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/type"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_margin="2dp"
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/willaya"
                            android:textColor="@android:color/holo_green_dark" android:textSize="24sp"/>
                    <TextView
                            android:layout_margin="2dp"
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/taille"
                            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
                </LinearLayout>
                <TextView
                        android:layout_margin="2dp"
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/prix"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="24sp"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="fill_parent"
                        android:layout_weight="40"
                        android:layout_height="fill_parent"
                        android:id="@+id/numero"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50">
                <TextView
                        android:layout_margin="2dp"
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="2.3in"
                        android:id="@+id/description"
                        android:textAppearance="@style/TextAppearance.AppCompat"/>
                <Button
                        android:text="ouvrir"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/ouvrir"
                        android:background="#e6ffe6"
                        android:layout_margin="2dp"
                        style="@android:style/Widget.DeviceDefault.Light.Button.Small"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>
