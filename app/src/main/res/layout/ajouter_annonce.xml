<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="#eeeeff">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
            <TextView
                    android:layout_margin="2dp"
                    android:text="Nouvelle annonce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/titre"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textColor="@android:color/black" android:gravity="center_horizontal"/>
            <TextView
                    android:layout_margin="2dp"
                    android:text="Ajouter une nouvelle annonce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/soustitre"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@android:color/black" android:gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    app:corner_radius="10dp"
                    android:elevation="3dp"
                    android:paddingHorizontal="10dp"
                    android:background="@color/cardview_light_background"
                    android:layout_marginBottom="5dp">
                <TextView
                        android:text="TITRE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/Titre_ajt" android:layout_weight="1"/>
            </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout><com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    app:corner_radius="10dp"
                    android:elevation="3dp"
                    android:paddingHorizontal="10dp"
                    android:background="@color/cardview_light_background"
                    android:layout_marginBottom="5dp">
            <TextView
                    android:text="Willaya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/willaya_ajt" android:layout_weight="1"/>
            </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>
            <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    app:corner_radius="10dp"
                    android:elevation="3dp"
                    android:paddingHorizontal="10dp"
                    android:background="@color/cardview_light_background"
                    android:layout_marginBottom="5dp">
                <TextView
                        android:text="Taille"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/taille_ajt" android:layout_weight="1"/>
            </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>
            <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    app:corner_radius="10dp"
                    android:elevation="3dp"
                    android:paddingHorizontal="10dp"
                    android:background="@color/cardview_light_background"
                    android:layout_marginBottom="5dp">
                <TextView
                        android:text="Prix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/prix_ajt" android:layout_weight="1"/>
            </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>
            <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1in"
                    android:layout_marginHorizontal="10dp"
                    app:corner_radius="10dp"
                    android:elevation="3dp"
                    android:paddingHorizontal="10dp"
                    android:background="@color/cardview_light_background"
                    android:layout_marginBottom="5dp">
                <TextView
                        android:text="Description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textMultiLine"
                        android:gravity="start|top"
                        android:ems="10"
                        android:id="@+id/desc_ajt" android:layout_weight="1"/>
            </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>
            <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    app:corner_radius="10dp"
                    android:elevation="3dp"
                    android:paddingHorizontal="10dp"
                    android:background="@color/cardview_light_background"
                    android:layout_marginBottom="5dp">
                <TextView
                        android:text="Numero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:ems="10"
                        android:id="@+id/num_ajt" android:layout_weight="1"/>
            </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:background="@color/cardview_light_background">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="100">
                    <android.support.design.widget.FloatingActionButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true" app:srcCompat="@drawable/ic_image_black_24dp"
                            android:id="@+id/floatingActionButton1" android:layout_weight="50"
                            android:layout_marginHorizontal="50dp"
                            android:layout_marginVertical="10dp"
                            style="@style/AlertDialog.AppCompat" app:backgroundTint="#00E285"/>
                    <android.support.design.widget.FloatingActionButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="50dp"
                            android:layout_marginVertical="10dp"
                            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_camera"
                            android:id="@+id/floatingActionButton2" android:layout_weight="50"
                            style="@style/AlertDialog.AppCompat" android:backgroundTint="#00BCD4"/>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/image_upload"
                        android:id="@+id/recycler_view_ajt"/>
            </LinearLayout>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/valider_ajt"
                    android:background="@drawable/ic_send_black_24dp"/>
        </LinearLayout>
    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>
</ScrollView>
