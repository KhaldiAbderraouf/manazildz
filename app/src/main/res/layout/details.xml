<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical" android:layout_height="wrap_content">

    <TextView
            android:layout_margin="2dp"
            android:layout_marginBottom="5dp"
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/soustitre_detail"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/black"/>
    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
            android:layout_margin="10dp"
            android:padding="10dp"
            app:corner_radius="30dp"
            android:background="#80CFF0D0"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_margin="2dp"
                android:text="Informations de l'immobilier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/black" android:textSize="24sp"/>
        <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <TextView
                    android:text="date depot : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:textSize="18sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_detail"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <TextView
                    android:text="type : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:textSize="18sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/type_detail"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <TextView
                    android:text="wilaya : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:textSize="18sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/willaya_detail"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <TextView
                    android:text="taille : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:textSize="18sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/taille_detail"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <TextView
                    android:text="prix : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:textSize="18sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/prix_detail"
                    android:layout_weight="1"/>
        </LinearLayout>
    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>
    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
            android:layout_margin="10dp"
            android:padding="10dp"
            app:corner_radius="30dp"
            android:background="#80CFF0D0"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_margin="2dp"
                android:text="Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/black" android:textSize="24sp"/>

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description_detail"
                android:layout_weight="1"/>
    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>
    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
            android:layout_margin="10dp"
            android:padding="10dp"
            app:corner_radius="30dp"
            android:background="#80CFF0D0"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_margin="2dp"
                android:text="Information du vendeur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/black" android:textSize="24sp"/>

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numero_detail"
                android:layout_weight="1"/>
        <android.support.design.widget.FloatingActionButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="#FFA4E2A6"
                app:srcCompat="@android:drawable/stat_sys_phone_call_forward"
                android:id="@+id/button_detail"
                app:backgroundTint="#FFA4E2A6"/>
    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_view_detail"
            tools:listitem="@layout/image"/>

</LinearLayout>
</ScrollView>