<?xml version="1.0" encoding="utf-8"?>
<com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="1.5in"
        tools:context=".MainActivity"
        android:background="#efffff"
        android:weightSum="100"
        app:corner_radius="10dp"
        android:id="@+id/element"
        android:layout_margin="5dp" >
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_weight="70"
            android:weightSum="100"
            android:layout_height="match_parent" >
        <ImageView
                android:layout_width="fill_parent"
                android:layout_weight="20"
                android:layout_height="fill_parent" tools:srcCompat="@tools:sample/backgrounds/scenic"
                android:id="@+id/photo"/>
        <TextView
                android:text="TextView"
                android:layout_width="fill_parent"
                android:layout_weight="40"
                android:layout_height="fill_parent"
                android:id="@+id/numero"/>
        <Button
                android:text="ouvrir"
                android:layout_width="fill_parent"
                android:layout_weight="40"
                android:layout_height="fill_parent"
                android:id="@+id/ouvrir"
                android:background="#e6ffe6"
                style="@android:style/Widget.DeviceDefault.Light.Button.Small"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="30"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            android:orientation="vertical" android:id="@+id/information">

        <TextView
                android:layout_margin="2dp"
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/titre"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/black"/>
        <TextView
                android:layout_margin="2dp"
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/depot"/>
        <TextView
                android:layout_margin="2dp"
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/willaya"
                android:textColor="@android:color/holo_green_dark" android:textSize="24sp"/>
        <TextView
                android:layout_margin="2dp"
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/taille"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
        <TextView
                android:layout_margin="2dp"
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="0.4in"
                android:id="@+id/description"
                android:textAppearance="@style/TextAppearance.AppCompat"/>
        <TextView
                android:layout_margin="2dp"
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/prix" android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"/>
    </LinearLayout>

</com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>